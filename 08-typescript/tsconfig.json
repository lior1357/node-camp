{
  "exclude": ["node_modules",
  "./dist/**/*" ],
  "compilerOptions": {
    
    /* Language and Environment */
    "target": "es2016",                                 
    
    "module": "esnext",                                
    "outDir": "dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    /* Type Checking */
    "strict": true,                                      
    
    "skipLibCheck": true,                              
    "declaration": true
  }
}

